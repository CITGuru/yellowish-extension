{
  "name": "Yellowish Chrome Extension",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Your intelligent shopping assistant.",
  "homepage_url": "http://yellowish.app",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "pt_BR",
  "background": {
    "page": "src/bg/background.html",
    "persistent": true
  },
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Yellowish Chrome Extension",
    "default_popup": "src/browser_action/browser_action.html"
  },
  "permissions": [
    "http://*/*",
    "https://*/*"
  ]
}